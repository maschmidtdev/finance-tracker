<% if @searched_friends %>
  <div class="card card-header results-block mb-3">
    <table class="col-md-12">
      <tbody>
      <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
        <% @searched_friends.each do |friend| %>
          <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td><%= link_to "View Profile", user_path(friend),
                            class: "btn btn-sm btn-success" %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: friend),
                            class: "btn btn-sm btn-success", data: { turbo_method: :post } %></td>
              <% else  %>
                <span class="badge bg-secondary">
                  You are friends
                </span>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>